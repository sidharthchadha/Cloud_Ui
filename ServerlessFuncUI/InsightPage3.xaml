<Page x:Class="ServerlessFuncUI.InsightPage3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServerlessFuncUI"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubmissionsPage">

    <Grid Background="Black">

        <!-- Bar Chart -->
        <lvc:CartesianChart Grid.Row="4" Grid.Column="1" BorderBrush="White" BorderThickness="1">
            <lvc:CartesianChart.Series>
                <lvc:ColumnSeries Title="Mean" Values="{Binding MeanValues}" />
                <lvc:ColumnSeries Title="Median" Values="{Binding MedianValues}" />
                <lvc:ColumnSeries Title="Highest" Values="{Binding HighestValues}" />
                <lvc:ColumnSeries Title="Lowest" Values="{Binding LowestValues}" />
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Statistics" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Values" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</Page>